package controller;

import util.Teclado;

/*
 * Um atleta olímpico corre em uma pista circular. Escreva um
programa que leia o raio da pista e a distância percorrida pelo atleta
e imprima na tela a quantidade de voltas que esse atleta percorreu
(esta quantidade pode ser decimal, por exemplo, 2,4 voltas).
 */
public class Questao01 {

	public static void main(String[] args) {
		double raio, distancia;
		
		
		
		
		raio = Teclado.lerDouble("Entre com o valor do raio da pista:");
		
		
		

	}
	
	public static double circulo (double raio) {
		double pi = 3.14;
		
		return pi * (Math.pow(raio, 2));
	}

}
